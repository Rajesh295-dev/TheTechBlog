  
<div class = "blog" class="row mb-4 post">
  <div  class=" postTitle flex-row justify-space-between" >
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>

  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>

</div>

<form action='POST' class="edit-post-form">

  <div class='form-group col-11'>
    <input name='title' type='text' placeholder="Update title..." value='{{post.title}}' class='form-input' />
  </div>
  <div class='form-group col-11'>
    <input
      name='description'
      placeholder="Update contents..."
      type='text'
      value='{{post.description}}'
      class='form-input'
    />
  </div>
  <div class='form-group col-11'>
    <button type='submit' class='btn btn-sm btn-primary'>Update Post</button>
    <button type='button' class='delete-post-btn btn btn-sm  btn-danger'>Delete
      Post</button>
  </div>
</form>


<script src='/js/edit-post.js'></script>
<script src='/js/delete-post.js'></script>
<div class="blog" class=" flex-row  justify-space-between " data-postid = {{id}}>

  <div class="postTitle flex-row justify-space-between">  
  <h2>{{title}}</h2>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  
  <div class="col-md-7"> 

    <p>
      {{description}}
    </p>

  </div>
  
</div>
 

<div class="commentBox">  
 
<h5>Comments</h5>

{{!--{{#each postData.post_comments}}--}}
{{#each post_comments}}

<div data-userid = "{{useerid}}" id="comment" class = "my-3 card " style = "width:50rem">

<div class = "card-body">
  <h5 class="card-subtitle mb-2 text-muted">{{comment_creator.name}} on {{format_date date_created}}</h5>
  <p class = "card-text input-content-{{id}}">{{content}}</p>
</div>

</div>



{{/each}}

{{#if logged_in}}
<div class=" my-3 form-floating">
  <textarea class="input-comment form-control " placeholder="Leave a comment..." id="floatingTextarea2" style="height:10vh"></textarea>
</div>

<button class="btn btn-primary new-comment" data-postid="{{id}}">Comment</button>

</div>


<script src="../js/comment.js"></script>
{{/if}}

<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class = "blog" class="row mb-4 post">
  <div  class=" postTitle flex-row justify-space-between  " >
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
